<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="planner.ivan.com.planner.DayFragment"
    android:orientation="vertical">

    <!--
    <include
        layout="@layout/bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
        -->


    <TextView android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="in DAY fragment"
        android:textSize="12dp"/>


    <android.support.design.widget.TabLayout
        android:id="@+id/tabLayoutDay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPagerDay"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@id/tabLayoutDay">
    </android.support.v4.view.ViewPager>

    <TextView android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="in DAY fragment2"
        android:textSize="12dp"
        android:layout_below="@id/viewPagerDay"/>


</RelativeLayout>
